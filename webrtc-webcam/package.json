{
    "name": "c8y-remote-access",
    "version": "1.0.0",
    "description": "Remote access connect for c8y and thin-edge",
    "bin": {
        "c8y-remote-access": "./dist/index.js"
    },
    "main": "lib/c8y-remote-access.js",
    "dependencies": {
        "mqtt": "^4.3.7",
        "winston": "^3.8.2",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "@types/ws": "^8.5.4",
        "@vercel/ncc": "^0.31.1",
        "rimraf": "^4.4.1",
        "typescript": "^4.4.4"
    },
    "scripts": {
        "build": "tsc",
        "cleanup": "rimraf dist && rimraf lib && rimraf --glob *.tgz",
        "dev": "npm run build && node . --lport 1985 --rhost=ws://127.0.0.1:1984/api/ws?src=linux_usbcam",
        "format": "prettier --write '**/*.ts'",
        "format-check": "prettier --check '**/*.ts'",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build",
        "test": "jest",
        "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
        "pack": "npm run cleanup && npm run build && npm run package && npm pack"
    },
    "author": "tristan.bastian@softwareag.com",
    "license": "MIT",
    "files": []
}
