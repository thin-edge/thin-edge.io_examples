#!/sbin/openrc-run

name=$RC_SVCNAME
description="tedge-mapper-c8y converts Thin Edge JSON measurements to Cumulocity JSON format."

command="/bin/tedge_mapper"
command_args="c8y"
command_user="tedge-mapper"
command_background="yes"
pidfile="/run/$RC_SVCNAME.pid"
output_log="/var/log/$RC_SVCNAME/$RC_SVCNAME.log"
error_log="/var/log/$RC_SVCNAME/$RC_SVCNAME.err"

depend() {
    need net
    need mosquitto
}

start_pre() {
    /bin/mkdir -m 744 -p /var/log/$RC_SVCNAME
    /bin/chown tedge-mapper:tedge-mapper /var/log/$RC_SVCNAME
}

